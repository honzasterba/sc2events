<%= form_for @event do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :starts_at %><br />
    <%= f.date_select :starts_at %>
  </p>
  <p>
    <%= f.label :ends_at %><br />
    <%= f.date_select :ends_at %>
  </p>
  <p>
    <%= f.label :homepage %><br />
    <%= f.text_field :homepage %>
  </p>
  <p><%= f.submit %></p>
<% end %>
